        <tr>
            <th>Sr No.</th>
            <th>Employee Name</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            //using (Html.BeginForm("Delete", "Employee", new { id = item.Sr_no }))
            //{

                <tr>
                    <td>@item.Sr_no</td>
